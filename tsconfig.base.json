{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
    "baseUrl": "./",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"strict": true,
		"moduleResolution": "node",
		"composite": true,
		"declaration": true,
		"alwaysStrict": false,
		"noImplicitUseStrict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
	},
  "exclude": [
    "node_modules",
    ".vscode-test",
  ]
}
