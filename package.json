{
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "compile": "cd packages/opencclint && npm run compile",
    "watch": "npm run build && (npm run watch:base && npm run watch:opencclint)",
    "watch:base": "tsc -b tsconfig.build.json -w",
    "watch:opencclint": "cd packages/opencclint && npm run watch"
  },
  "devDependencies": {
    "@lerna-lite/cli": "latest",
    "@types/node": "latest",
    "typescript": "latest"
  }
}
