{
  "name": "opencclint",
  "displayName": "opencclint",
  "description": "使用 opencc 转换繁简体, 保存自动格式化",
  "repository": {
    "type": "git",
    "url": "https://github.com/hddhyq/vscode-opencclint.git"
  },
  "publisher": "brokenbonesdd",
  "version": "0.0.2",
  "license": "MIT",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "chinese",
    "opencc",
    "translation",
    "traditional",
    "simplified",
    "taiwan",
    "hong kong",
    "繁",
    "繁体",
    "简",
    "简体",
    "繁简体"
  ],
  "activationEvents": [
    "onCommand:opencclint.translateFile",
    "onCommand:opencclint.translateSelection",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opencclint.translateFile",
        "title": "OpenccLint: Translate File"
      },
      {
        "command": "opencclint.translateSelection",
        "title": "OpenccLint: Translate Selection"
      }
    ],
    "keybindings": [
      {
        "command": "opencclint.translateFile",
        "key": "ctrl+alt+o",
        "mac": "shift+cmd+o"
      },
      {
        "command": "opencclint.translateSelection",
        "key": "ctrl+alt+p",
        "mac": "shift+cmd+p"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "opencclint",
      "properties": {
        "opencclint.languages": {
          "default": [
            "vue",
            "plaintext",
            "html",
            "typescript",
            "javascript",
            "jsx",
            "jsonc",
            "php"
          ],
          "type": [
            "array"
          ],
          "items": {
            "type": "string"
          },
          "description": "Languages to lint with opencclint."
        },
        "opencclint.debug": {
          "default": false,
          "type": "boolean",
          "description": "Toggle debug mode."
        },
        "opencclint.converterOptions": {
          "default": "cn=>tw",
          "type": "string",
          "description": "Opencclint converter options."
        },
        "opencclint.autoFixOnSave": {
          "default": false,
          "type": "boolean",
          "description": "Opencclint autoFixOnSave options."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "opencclint.translateSelection",
          "group": "7_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cosmiconfig": "^7.0.1",
    "ignore": "^5.2.0",
    "opencc-js": "^1.0.4"
  }
}
